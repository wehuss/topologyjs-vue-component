{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "lib": [
      "es2018",
      "es2020.string",
      "dom"
    ],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "importHelpers":true,
    "allowSyntheticDefaultImports":true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts","src/**/*d.ts"],
  "exclude": ["node_modules", "dist"]
}
