{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "importHelpers":true,
    "allowSyntheticDefaultImports":true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts","lib/**/*d.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
